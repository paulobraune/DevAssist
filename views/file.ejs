<div class="row">
  <div class="col-12">
    <nav aria-label="breadcrumb" class="mb-4">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active">Arquivo</li>
      </ol>
    </nav>
    
    <div class="card shadow-custom">
      <div class="card-header sticky-top bg-dark d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
          <h5 class="card-title mb-0 text-truncate">
            <i class="bi bi-file-earmark-code text-primary me-2"></i>
            <%= filename %>
          </h5>
        </div>
        <div class="d-flex">
          <a href="/analyze/<%= filename %>" class="btn btn-primary d-flex align-items-center">
            <i class="bi bi-search me-2"></i>
            <span class="d-none d-sm-inline">Analisar</span>
          </a>
          <a href="/" class="btn btn-outline-light ms-2 d-flex align-items-center">
            <i class="bi bi-arrow-left me-2"></i>
            <span class="d-none d-sm-inline">Voltar</span>
          </a>
        </div>
      </div>
      <div class="card-body p-0">
        <div class="bg-darker p-3" style="min-height: 500px; max-height: 80vh; overflow-y: auto;">
          <pre class="mb-0 language-javascript"><code class="text-light"><%= content %></code></pre>
        </div>
      </div>
      <div class="card-footer bg-dark border-medium d-flex justify-content-between align-items-center p-3">
        <div class="text-light small">
          <i class="bi bi-info-circle me-1"></i>
          O código acima pode ser analisado pelo DevAssist GPT
        </div>
        <a href="/analyze/<%= filename %>" class="btn btn-sm btn-primary">
          <i class="bi bi-robot me-1"></i>
          Obter Análise do GPT
        </a>
      </div>
    </div>
  </div>
</div>